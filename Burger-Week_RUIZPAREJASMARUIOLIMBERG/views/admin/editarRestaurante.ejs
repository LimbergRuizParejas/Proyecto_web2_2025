<%- include('../components/header') %>

<h2>Editar Restaurante</h2>

<form method="POST" action="/admin/restaurantes/<%= restaurante.id %>">
  <label>Nombre:</label>
  <input type="text" name="nombre" value="<%= restaurante.nombre %>" required />
  <br />
  <label>Logo (URL):</label>
  <input type="text" name="logo" value="<%= restaurante.logo %>" required />
  <br />
  <button type="submit">Guardar cambios</button>
</form>

<a href="/admin/restaurantes">Volver</a>

